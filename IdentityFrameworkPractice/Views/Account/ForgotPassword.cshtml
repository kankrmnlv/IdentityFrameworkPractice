@using IdentityFrameworkPractice.ViewModels
@model ForgotPasswordViewModel

<h1 class="text-info text-center mb-4">Forgot Your Password?</h1>

<div class="d-flex justify-content-center">
    <form asp-controller="Account" asp-action="ForgotPassword" method="post" role="form" class="w-50 p-4 border rounded shadow-sm bg-light">

        <p class="text-muted mb-4 text-center">
            Enter your email address below, and we'll send you instructions to reset your password.
        </p>

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="form-group mb-4">
            <label asp-for="Email" class="form-label fw-semibold">Email Address</label>
            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success w-100">Submit</button>
        </div>

        <div class="text-center mt-3">
            <a asp-action="Login" class="text-decoration-none">Back to Login</a>
        </div>

    </form>
</div>
